{
    "name": "shipmate-io/laravel-shipmate",
    "description": "Fully managed microservice hosting for Laravel",
    "keywords": [
        "shipmate-io",
        "laravel",
        "laravel-shipmate"
    ],
    "homepage": "https://github.com/shipmate-io/laravel-shipmate",
    "license": "MIT",
    "authors": [
        {
            "name": "Shipmate",
            "email": "info@shipmate.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Shipmate\\Shipmate\\": "src",
            "Shipmate\\Shipmate\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shipmate\\Shipmate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shipmate\\Shipmate\\ShipmateServiceProvider"
            ],
            "aliases": {
                "Shipmate": "Shipmate\\Shipmate\\Facades\\Shipmate"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
